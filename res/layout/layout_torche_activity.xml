<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutActivity"
    android:keepScreenOn="true">
    
     <TextView
        android:id="@+id/tvTitreTorcheActivity"
        style="@style/TitreActivity"
        android:text="@string/TitreTorche" />

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:gravity="center"
	     android:orientation="vertical" >
		 <LinearLayout
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content" 
		         android:orientation="horizontal"
		         android:weightSum="2">
		         <ImageButton
			         android:id="@+id/ibScreenLight"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:background="@android:color/transparent"
			         android:src="@drawable/screen_on1" 
			         android:layout_weight="1"/>
			     <ImageButton
			         android:id="@+id/ibFlash"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:background="@android:color/transparent"
			         android:src="@drawable/flash_off"
					 android:layout_weight="1"/>
		 </LinearLayout>
	       
	  <TextView
	         android:id="@+id/tvTexteTorcheActivity"
	         style="@style/TexteSimple"
	         android:gravity="center" /> 

	 
	 </LinearLayout>

</LinearLayout>