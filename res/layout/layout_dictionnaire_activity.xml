<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutActivity"> 

    <TextView
        android:id="@+id/tvTitreDictionnaireActivity"
        style="@style/TitreActivity"
        android:text="@string/TitreDictionnaire" />
    <Spinner
        android:id="@+id/spCategorieDictionnaireActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:prompt="@string/SpinnerCategorieTitre"
        android:background="@drawable/btest1"
        android:padding="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
   
	    <Spinner
	        android:id="@+id/spLangue1DictionnaireActivity"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
        android:background="@drawable/btest1"
        android:padding="20dp"/>
	    <Spinner
	        android:id="@+id/spLangue2DictionnaireActivity"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
        android:background="@drawable/btest1"
        android:padding="20dp"/>
     </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
 			<ListView
		        android:id="@+id/lvMotsDictionnaireActivity"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" 
		        android:cacheColorHint="@android:color/transparent"
		        android:divider="@color/BrownDark"
		        android:dividerHeight="1dp">
		    </ListView> 
    
    </LinearLayout>


    
</LinearLayout>