<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutActivity"> 

    <TextView
        android:id="@+id/tvTitreCompostelleNewStepActivity" 
        style="@style/TitreActivity"
        android:layout_height="wrap_content"
        android:text="@string/TitreCompostelleNewStep" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:gravity="center">
        
         <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  >
                    <!--date  -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="1">
 				<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical">

 					<TextView
 					    android:id="@+id/tvNewStepDate"
 					    style="@style/TexteNewStepActivity"
 					    android:text="@string/TexteStepDate" />

 					<Button
 					    android:id="@+id/bNewStepDate"
						style="@style/LinkSousActivity"/>"
				 </LinearLayout>
            </TableRow>
			<!-- distance  -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="1">
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="vertical">
                 <TextView
	                android:id="@+id/tvNewStepDistance"
	                style="@style/TexteNewStepActivity"
	                android:text="@string/TexteStepDistance" />
	            <EditText
	                android:id="@+id/etNewStepDistance"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:inputType="numberDecimal" 
	                android:layout_gravity="bottom"></EditText>
                </LinearLayout>
            </TableRow>
        </TableRow>
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  >
             <!--lieu depart  -->
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="vertical">
	            <TextView
	                android:id="@+id/tvNewStepStart"
					style="@style/TexteNewStepActivity"
	                android:text="@string/TexteStepStart" />
	            <EditText
	                android:id="@+id/etNewStepStart"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:inputType="text"
	                android:imeOptions="actionNext"> </EditText>
	            </LinearLayout>
	         </TableRow>  
	            <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  >
 				<LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="vertical"> 
		            <TextView
		                android:id="@+id/tvNewStepEnd"
		                style="@style/TexteNewStepActivity"
		                android:text="@string/TexteStepEnd" />
		            <EditText
		                android:id="@+id/etNewStepEnd"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" 
	                android:inputType="text"
	                android:imeOptions="actionNext"/>
	 			</LinearLayout>
            </TableRow>
		<!-- </TableRow> -->
       
        <!-- commentaire -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical">
            <TextView
                android:id="@+id/tvNewStepCommentaire"
				style="@style/TexteNewStepActivity"
                android:text="@string/TexteStepComment" />
            <EditText
                android:id="@+id/etNewStepCommentaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
	                android:inputType="text" >
            </EditText>
            </LinearLayout>
        </TableRow>
                <!-- AddStep -->
         <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <Button
                android:id="@+id/bNewStepAddStep"
                style="@style/LinkSousActivity"
                android:text="Save" />
        </TableRow>
    </TableLayout>

</LinearLayout>